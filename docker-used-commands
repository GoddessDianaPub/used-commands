#download an image from dokcer hub public registry
docker pull <Image Name>

#checks current images on your host
docker images

#creates a temporary running state container from docker hub public registry image
docker run <Image Name:Image Version>

#creates a running container from docker hub public registry image
docker run -d <Image Name:Image Version>

#checks the container logs
docker logs <CONTAINER ID/NAME>

#stop the container
docker stop <CONTAINER ID/NAME>

#stop multiple containers
docker stop <CONTAINER ID/NAME> <CONTAINER ID/NAME> etc

#start the container
docker start <CONTAINER ID/NAME>

#start multiple containers
docker start <CONTAINER ID/NAME> <CONTAINER ID/NAME> etc

#lists the running containers
docker ps

#lists all the containers
docker ps -a

# 